{
    "name": "caesar",
    "version": "1.0.0",
    "private": true,
    "description": "Standalone build of Caesar (not dependent on a Discord installation)",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/steviegt6/caesar.git"
    },
    "author": "tomat",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/steviegt6/caesar/issues"
    },
    "homepage": "https://github.com/steviegt6/caesar#readme",
    "main": "index.js",
    "scripts": {
        "package": "electron-builder",
        "start": "electron ../dist/discord/index.js"
    },
    "devDependencies": {
        "electron": "^22.3.12",
        "electron-builder": "^24.9.1"
    },
    "build": {
        "appId": "dev.tomat.caesar",
        "productName": "Caesar",
        "files": [
            {
                "from": "../dist/discord",
                "to": "",
                "filter": [
                    "**/*"
                ]
            },
            "package.json"
        ],
        "linux": {
            "category": "Network",
            "maintainer": "xxlennygamerxx@gmail.com",
            "target": [
                {
                    "target": "deb",
                    "arch": [
                        "x64",
                        "arm64"
                    ]
                },
                {
                    "target": "tar.gz",
                    "arch": [
                        "x64",
                        "arm64"
                    ]
                },
                {
                    "target": "rpm",
                    "arch": [
                        "x64",
                        "arm64"
                    ]
                },
                {
                    "target": "AppImage",
                    "arch": [
                        "x64",
                        "arm64"
                    ]
                }
            ],
            "desktop": {
                "Name": "Caesar",
                "GenericName": "Internet Messenger",
                "Type": "Application",
                "Categories": "Network;InstantMessaging;Chat;",
                "Keywords": "discord;"
            }
        },
        "mac": {
            "target": [
                {
                    "target": "default",
                    "arch": [
                        "x64",
                        "arm64"
                    ]
                }
            ],
            "category": "Network",
            "extendInfo": {
                "NSMicrophoneUsageDescription": "This app needs access to the microphone",
                "NSCameraUsageDescription": "This app needs access to the camera",
                "com.apple.security.device.audio-input": true,
                "com.apple.security.device.camera": true
            }
        },
        "nsis": {
            "oneClick": false
        },
        "win": {
            "target": [
                "nsis",
                "zip"
            ]
        },
        "publish": {
            "provider": "github"
        }
    }
}
